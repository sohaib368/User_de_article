<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Articles</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" style="color: white;background-color: blue"; <%= link_to "Home", user_profiles_path %> </a>
      </li>
    </ul>
    <form class="navbar navbar-expand-lg form-inline my-2 my-lg-0" >

      <span style="color: blue";> <%= link_to "Sign up", new_user_registration_path %> </span>
      <%= link_to "Login", new_user_session_path %>
    </form>
  </div>
</nav>
<div class="jumbotron">
  <li class="img-thumbnail"><%= image_tag(@article.avatar) %></li>
  <h1 class="display-4"><%= @article.title %></h1>
  <p class="lead"><%= @article.article_details %></p>
  <hr class="my-4">
  <p>Published at: <%= @article.created_at %></p>
  <a class="btn btn-primary btn-lg" href="#" role="button">Back</a>
</div>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<div class="container">
  <div class="row ">
    <div class="panel panel-default widget col-lg-12">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-comment"></span>
        <h3 class="panel-title ">Recent Comments</h3>
        <span class="label label-info">78</span>
      </div>
      <div id="comments">
        <% @comments.each do |comment| %>
          <%= render 'comments/commentshow', comment: comment %>
        <% end %>
      </div>
    </div>
  </div>
  <% if user_signed_in? %>
    <%= form_for(@comment, remote: true) do |form| %>
      <%= form.hidden_field(:commentable_id) %>
      <%= form.hidden_field(:commentable_type) %>
      <%= form.label("comment") %>
      <%= form.text_field(:comment_details) %>
      <%= form.submit 'submit' %>
    <% end %>
  <% end %>
</div>











